        local num = tonumber(burstCountInputBox.Text)
        if num and num > 0 and num <= 50 then -- Validasi: harus angka antara 1 dan 50
            burstShotCount = math.floor(num) -- Simpan angka valid
        end
        burstCountInputBox.Text = tostring(burstShotCount) -- Perbarui teks ke nilai terakhir yang valid
    end)
    
